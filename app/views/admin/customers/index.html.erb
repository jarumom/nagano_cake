<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
      <h4>会員一覧</h4>

      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_name, admin_customer_path(customer), method: :get %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
                <p class="font-weight-bold text-success">有効</p>
              <% else %>
                <p class="font-weight-bold text-black-50">退会</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @customers %>

    </div>
    <div class="col-lg-1"></div>
  </div>
</div>