<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">

      <h4>会員情報編集</h4>

      <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件のエラーが発生しました
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <form class="form-horizontal">
          <div class="row">
            <label class="col-lg-3">
              <%= f.label :会員ID %>
            </label>
            <div class="col">
              <%= @customer.id %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :氏名 %>
            </label>
            <div class="col-lg-3">
              <%= f.text_field :last_name, autofocus: true %>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :first_name, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :フリガナ %>
            </label>
            <div class="col-lg-3">
              <%= f.text_field :last_name_kana, autofocus: true %>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :first_name_kana, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :郵便番号 %>
            </label>
            <div class="col">
              <%= f.text_field :postal_code, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :住所 %>
            </label>
            <div class="col">
              <%= f.text_field :address, autofocus: true, style: "width:100%" %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :電話番号 %>
            </label>
            <div class="col">
              <%= f.text_field :telephone_number, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :メールアドレス %>
            </label>
            <div class="col">
              <%= f.text_field :email, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :会員ステータス %>
            </label>
            <div class="col">
              <%= f.radio_button :is_deleted, :false, checked: true %>
              <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
            </div>

          </div>

          <div class="row">
            <div class="col-lg-3"></div>
            <div class="col">
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </div>
          </div>
        </form>
      <% end %>
    </div>
    <div class="col-lg-1">
    </div>
  </div>
</div>