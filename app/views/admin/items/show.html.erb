<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <h4>商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-4">
      <%= image_tag @item.image, size: "300x250" %>
    </div>
    <div class="col-lg-6">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>税込価格<br>（税抜価格）</td>
          <td>
            <%= @item.with_tax_price %>
            （<%= @item.price %>）円
          </td>
        </tr>

        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              <p class="font-weight-bold text-success">販売中</p>
            <% else %>
              <p class="font-weight-bold text-black-50">販売停止中</p>
            <% end %>
          </td>
        </tr>

        <td class="text-left">
          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
        </td>

      </table>
    </div>
    <div class="col-lg-1"></div>
  </div>
</div>