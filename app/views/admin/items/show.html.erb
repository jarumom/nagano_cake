<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <h4>商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-4">
      <%= image_tag @item.image, size: "300x250" %>
    </div>
    <div class="col-lg-6">
      <table width="100%">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre_id %></td>
          <!--ジャンルの名前を出したい-->
        </tr>

        <!--税込価格　ステータス-->


      </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
    <div class="col-lg-1"></div>
  </div>
</div>