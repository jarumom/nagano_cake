<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <h4>商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-4">
      <%= image_tag @item.image, size: "300x250" %>
    </div>
    <div class="col-lg-6">
      <table width="100%">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>税込価格<br>（税抜価格）</td>
          <td>
            <%= @item.with_tax_price %>
            （<%= @item.price %>）円
          </td>
        </tr>

        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              販売中
            <% else %>
              販売停止
            <% end %>
          </td>
        </tr>


      </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
    <div class="col-lg-1"></div>
  </div>
</div>