<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
      <h4>ジャンル編集</h4>
      <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
        <div class="form-group form-inline">
          <div class="col-lg-2">
            <%= f.label :ジャンル名 %>
          </div>
          <div class="col-lg-3">
            <%= f.text_field :name, id: "genre_name", style: "width:100%" %>
          </div>
          <div class="col-lg-2">
            <%= f.submit '変更を保存', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>


    </div>
    <div class="col-lg-1"></div>
  </div>
</div>