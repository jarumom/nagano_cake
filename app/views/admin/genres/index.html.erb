<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">

      <h4>ジャンル一覧・追加</h4>

        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="form-group form-inline">
          <div class="col-lg-2">
            <%= f.label :ジャンル名 %>
          </div>
          <div class="col-lg-3">
            <%= f.text_field :name, style: "width:100%" %>
          </div>
          <div class="col-lg-2">
            <%= f.submit '新規登録', class: "btn btn-success" %>
          </div>
        </div>
        <% end %>

      <div class="row"></div>

      <div class="col-lg-5">
        <table class="table table-hover table-inverse">
          <thead>
            <th>ジャンル</th>
            <th></th>
          </thead>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>

    </div>
    <div class="col-lg-1"></div>
  </div>
</div>