<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">

      <h4>商品一覧</h4>

　　　<!--横並びにしたい-->
      <% @items.each do |item| %>
        <div class="row row-cols-4">
          <div class="col">
          <%= link_to item_path(item.id) do %>
            <div class="card">
              <%= image_tag item.get_image, class: "card-img-top" %>
              <div class="card-body">
                <p class="card-title">
                  <%= item.name %>
                </p>
                ¥<%= item.price %>
              </div>
            </div>
          <% end %>
          </div>
        </div>

      <% end %>

    </div>
    <div class="col-lg-1"></div>
  </div>
</div>