<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">

      <h4>商品一覧</h4>

　　　<!--横並びにしたい-->

      <% @items.each do |item| %>
        <span class="row row-cols-4">
          <span class="col">
          <%= link_to item_path(item.id) do %>
            <span class="card">
              <%= image_tag item.get_image, class: "card-img-top" %>
              <span class="card-body">
                <p class="card-title">
                  <%= item.name %>
                </p>
                ¥<%= item.with_tax_price %>
              </span>
            </span>
          <% end %>
          </span>
        </span>

      <% end %>

    </div>
    <div class="col-lg-1"></div>
  </div>
</div>