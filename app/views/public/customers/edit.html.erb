<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">

      <h4>会員情報編集</h4>

      <%= form_with model: @customer, url: update_customers_path, method: :patch do |f| %>
        <form class="form-horizontal">
          <div class="row">
            <label class="col-lg-3">
              <%= f.label :氏名 %>
            </label>
            <div class="col-lg-3">
              <%= f.text_field :last_name, autofocus: true %>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :first_name, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :フリガナ %>
            </label>
            <div class="col-lg-3">
              <%= f.text_field :last_name_kana, autofocus: true %>
            </div>
            <div class="col-lg-3">
              <%= f.text_field :first_name_kana, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :郵便番号 %>
            </label>
            <div class="col">
              <%= f.text_field :postal_code, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :住所 %>
            </label>
            <div class="col">
              <%= f.text_field :address, autofocus: true, style: "width:100%" %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :電話番号 %>
            </label>
            <div class="col">
              <%= f.text_field :telephone_number, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <label class="col-lg-3">
              <%= f.label :メールアドレス %>
            </label>
            <div class="col">
              <%= f.text_field :email, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-3"></div>
            <div class="col">
              <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            </div>
            <div class="col">
              <!--退会するボタン-->
            </div>
          </div>
        </form>
      <% end %>
    </div>
    <div class="col-lg-1">
    </div>
  </div>
</div>