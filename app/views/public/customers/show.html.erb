<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">

      <h4>マイページ</h4>

　　　<div class="row">
    　　　<h5>登録情報</h5>
    　　　<%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
　　　</div>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="col-lg-3 table-active">氏名</td>
            <td><%= @customer.full_name %></td>
          </tr>

          <tr>
            <td class="col-lg-3 table-active">カナ</td>
            <td><%= @customer.full_name_kana %></td>
          </tr>

          <tr>
            <td class="col-lg-3 table-active">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td class="col-lg-3 table-active">住所</td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td class="col-lg-3 table-active">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td class="col-lg-3 table-active">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>

        </tbody>
      </table>

      <div class="row">
        <h5 class="col-lg-3">配送先</h5>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
      </div>

      <br>

      <div class="row">
        <h5 class="col-lg-3">注文履歴</h5>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
      </div>

    </div>
    <div class="col-lg-1"></div>
  </div>
</div>