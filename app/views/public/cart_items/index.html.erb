<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">

      <h4>ショッピングカート</h4>

      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価（税込）</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <!--商品名-->
              <td><%= cart_item.item_id %></td>
              <!--単価-->
              <td></td>
              <td><%= cart_item.amount %></td>
              <!--小計-->
              <td></td>
              <!--削除-->
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-1"></div>
  </div>
</div>